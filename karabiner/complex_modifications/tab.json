{
  "title": "Tab is Shift/ Tab",
  "rules": [
    {
      "description": "Swap Tab with Left Shift but Tab when pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    }
  ]
}
